<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_f2"
    android:id="@+id/baojia_edit_parent"
    android:orientation="vertical">
    <include layout="@layout/top_title" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/txt_10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/txt_20dp"
            android:layout_marginRight="@dimen/txt_20dp"
            android:layout_marginTop="@dimen/txt_10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/txt_10dp"
                android:background="@drawable/baojia_edit_bg">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/txt_10dp"
                android:paddingTop="@dimen/txt_10dp"
                android:text="货物信息"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_18" />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/txt_5dp"
                    android:background="@color/color_f2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/txt_5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.7"
                    android:textColor="@color/black_263"
                    android:paddingLeft="@dimen/txt_10dp"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:text="货主信息:"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:id="@+id/baojia_ownwename"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/txt_14"
                    android:text="我是哈哈"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.8"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/txt_14"
                    android:text="15908690321"
                    android:id="@+id/baojia_ownerphone"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/txt_5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.7"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/txt_10dp"
                    android:text="装货地址:"
                    android:textColor="@color/black_263"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/baojia_zhuang"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.3"
                    android:singleLine="true"
                    android:textColor="@color/black_6d"
                    android:textSize="@dimen/txt_14" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/txt_5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.7"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/txt_10dp"
                    android:text="卸货地址:"
                    android:textColor="@color/black_263"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/baojia_xie"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.3"
                    android:singleLine="true"
                    android:textColor="@color/black_6d"
                    android:textSize="@dimen/txt_14" />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/txt_5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.7"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/txt_10dp"
                        android:text="车型/货物:"
                        android:textColor="@color/black_263"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/baojia_carinfo"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4.3"
                        android:singleLine="true"
                        android:textColor="@color/black_6d"
                        android:textSize="@dimen/txt_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/txt_5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.7"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/txt_10dp"
                        android:text="装车时间:"
                        android:textColor="@color/black_263"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/baojia_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4.3"
                        android:singleLine="true"
                        android:textColor="@color/black_6d"
                        android:textSize="@dimen/txt_14" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/txt_5dp"
                    android:layout_marginBottom="@dimen/txt_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.7"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/txt_10dp"
                        android:text="其它要求:"
                        android:textColor="@color/black_263"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/baojia_otherneed"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4.3"
                        android:singleLine="true"
                        android:textColor="@color/black_6d"
                        android:textSize="@dimen/txt_14" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/txt_10dp"
                android:background="@drawable/baojia_edit_bg">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/txt_10dp"
                    android:paddingTop="@dimen/txt_10dp"
                    android:text="报价信息(元)"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_18" />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_f2"
                    android:layout_marginTop="@dimen/txt_5dp"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_f2"
                    android:layout_marginTop="@dimen/txt_5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/txt_10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/txt_10dp"
                        android:text="车辆:"
                        android:textColor="@color/black_263"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/baojia_yunshu_carinfo"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@null"
                        android:text="选择车辆"
                        android:gravity="center_vertical"
                        android:textColor="@color/shen_blue"
                        android:textSize="@dimen/txt_14" />
                    <TextView
                        android:id="@+id/baojia_yunshu_carinfo2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@null"
                        android:text=""
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_6d"
                        android:textSize="@dimen/txt_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/txt_5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.7"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/txt_10dp"
                        android:text="运输费:"
                        android:textColor="@color/black_263"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/baojia_yunshu_fee"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:background="@null"
                        android:hint="0.00"
                        android:inputType="number"
                        android:textColor="@color/black_6d"
                        android:textSize="@dimen/txt_14" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/txt_10dp"
                        android:text="其他费:"
                        android:textColor="@color/black_263"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/baojia_other_fee"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:background="@null"
                        android:hint="0.00"
                        android:inputType="number"
                        android:textColor="@color/black_6d"
                        android:textSize="@dimen/txt_14" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/txt_5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.7"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/txt_10dp"
                        android:text="延时费:"
                        android:textColor="@color/black_263"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/baojia_yanshi_fee"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:background="@null"
                        android:text="0.00"
                        android:textColor="@color/black_6d"
                        android:textSize="@dimen/txt_14" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/txt_10dp"
                        android:text="平台佣金:"
                        android:textColor="@color/black_263"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/baojia_yj_fee"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:background="@null"
                        android:text="55"
                        android:textColor="@color/black_6d"
                        android:textSize="@dimen/txt_14" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/txt_5dp"
                    android:layout_marginBottom="@dimen/txt_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.7"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/txt_10dp"
                        android:text="平台税金:"
                        android:id="@+id/baojia_edit_sjtxt"
                        android:textColor="@color/black_263"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/baojia_sj_fee"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:background="@null"
                        android:text="0.00"
                        android:textColor="@color/black_6d"
                        android:textSize="@dimen/txt_14" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/txt_10dp"
                        android:text="报价总计:"
                        android:textColor="@color/black_263"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/baojia_sum_fee"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:background="@null"
                        android:hint="0.00"
                        android:gravity="center_vertical"
                        android:textColor="@color/red"
                        android:textSize="@dimen/txt_14" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/baojia_edit_status_ll"
                android:background="@drawable/baojia_edit_bg"
                android:layout_marginTop="@dimen/txt_20dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/txt_10dp"
                    android:layout_marginTop="@dimen/txt_10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="报价状态:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_18"
                        android:paddingLeft="@dimen/txt_10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="货主拒绝了您的报价"
                        android:visibility="gone"
                        android:id="@+id/baojia_edit_baojiastatus"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/red"
                        android:layout_centerVertical="true"
                        android:paddingRight="@dimen/txt_20dp"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/txt_10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.7"
                        android:text="拒绝理由:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_16"
                        android:paddingLeft="@dimen/txt_10dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="货主拒绝了您的报价"
                        android:layout_weight="4.3"
                        android:textSize="@dimen/txt_16"
                        android:id="@+id/baojia_edit_reason"
                        android:textColor="@color/black_6d"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/txt_39dp"
                android:layout_marginLeft="@dimen/txt_20dp"
                android:layout_marginRight="@dimen/txt_20dp"
                android:background="@drawable/login_bt_"
                android:text="确认报价"
                android:layout_marginTop="@dimen/txt_20dp"
                android:textSize="@dimen/txt_18"
                android:textColor="@color/white"
                android:id="@+id/baojia_submit"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="货主同意报价即可锁定订单"
                android:gravity="center"
                android:id="@+id/baojia_edit_intro"
                android:textSize="@dimen/txt_14"
                android:layout_marginBottom="@dimen/txt_39dp"
                android:paddingTop="@dimen/txt_10dp"/>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>