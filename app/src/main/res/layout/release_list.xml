<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:focusable="true"
    android:focusableInTouchMode="true" >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/shen_blue"
        android:text="空程"
        android:textSize="@dimen/txt_18"
        android:textColor="@color/white"
        android:gravity="center"/>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/txt_15dp"
        android:background="@color/color_f2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="9">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:id="@+id/rl_toaddrelease"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/truckgreen"
                android:paddingLeft="@dimen/txt_10dp"
                android:id="@+id/kong_truck"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/txt_10dp"
                android:layout_toRightOf="@+id/kong_truck">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="发布空程车"
                    android:textSize="@dimen/txt_18"
                    android:textColor="#3bbe79"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fabu_intro"
                    android:ellipsize="end"
                    android:maxEms="19"
                    android:paddingTop="@dimen/txt_5dp"
                    android:textColor="@color/color_4a"
                    android:textSize="@dimen/txt_12"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=">"
                android:gravity="center_vertical"
                android:textSize="@dimen/txt_20"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/txt_15dp"/>

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/txt_15dp"
            android:background="@color/color_f2"/>
        <!--此处应是一个ListView-->
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rcv_have_fabu"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:background="@color/color_f2"
            android:layout_gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="38"
                android:background="@color/color_f2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="24"
                android:layout_marginLeft="@dimen/txt_10dp"
                android:text="历史空程发布"
                android:textColor="#666666"
                android:textSize="@dimen/txt_14"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="38"
                android:background="@color/color_f2"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/over"
                android:paddingLeft="@dimen/txt_10dp"
                android:paddingRight="@dimen/txt_5dp"
                android:id="@+id/icon_finished"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/txt_10dp"
                android:layout_toRightOf="@+id/icon_finished">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="深圳科技园—俄罗斯贝加尔湖畔"
                    android:textSize="@dimen/txt_14"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/txt_5dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="¥8180"
                        android:textSize="@dimen/txt_14"
                        android:textColor="#fd6835"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="装货时间"
                        android:textColor="#666666"
                        android:paddingLeft="@dimen/txt_5dp"
                        android:textSize="@dimen/txt_12"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="08-07 下午"
                        android:paddingLeft="@dimen/txt_5dp"
                        android:textSize="@dimen/txt_12"
                        android:textColor="#666666"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="修改"
                        android:paddingLeft="@dimen/txt_5dp"
                        android:textColor="@color/shen_blue"
                        android:textSize="@dimen/txt_10"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/txt_5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="发布时间"
                        android:textSize="@dimen/txt_12"
                        android:textColor="#666666"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="2017-08-08  15:36"
                        android:paddingLeft="@dimen/txt_5dp"
                        android:textSize="@dimen/txt_12"
                        android:textColor="#666666"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_alignParentRight="true" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="@dimen/txt_10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textColor="@color/shen_blue"
                    android:background="@drawable/blue_stroke"
                    android:textSize="@dimen/txt_10"
                    android:text="取消发布"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/shen_blue"
                    android:background="@drawable/blue_stroke"
                    android:textSize="@dimen/txt_10"
                    android:layout_margin="@dimen/txt_10dp"
                    android:gravity="center"
                    android:text="分享"/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    </LinearLayout>

</LinearLayout>
</android.support.v4.widget.NestedScrollView>