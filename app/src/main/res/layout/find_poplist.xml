<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5000">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/txt_39dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/txt_15dp"
            android:text="取消"
            android:textColor="@color/red"
            android:textSize="@dimen/txt_16"
            android:id="@+id/find_time_cancel"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            android:textSize="@dimen/txt_16"
            android:id="@+id/find_time_timetxt"
            android:textColor="@color/black_6d"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="确定"
            android:id="@+id/find_time_sure"
            android:textColor="@color/shen_blue"
            android:textSize="@dimen/txt_16"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/txt_15dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal">
        <ListView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:id="@+id/find_pop_listview"
            android:dividerHeight="0.5dp"
            android:divider="@color/color_f2"
            android:cacheColorHint="@android:color/transparent"
            android:scrollingCache="false"
            android:scrollbars="none"
            android:scrollbarStyle="outsideOverlay"
            android:fadingEdge="none"
            android:listSelector="#00000000"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="3">
            <ListView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/find_time_listview1"
                android:dividerHeight="0.5dp"
                android:divider="@color/color_f2"/>
            <FrameLayout
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/color_f2"/>
            <ListView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/find_time_listview2"
                android:dividerHeight="0.5dp"
                android:divider="@color/color_f2"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f2f2f2"
        android:orientation="vertical"/>
</LinearLayout>