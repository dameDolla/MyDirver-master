<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/top_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@color/shen_blue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户余额(元)"
            android:textSize="@dimen/txt_14"
            android:textColor="@color/white"
            android:padding="@dimen/txt_10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="520.00元"
            android:textSize="@dimen/txt_48"
            android:textColor="@color/white"
            android:id="@+id/my_balance"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_12"
            android:text="冻结金额:0.00元"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:paddingBottom="@dimen/txt_20dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:paddingTop="@dimen/txt_5dp"
                    android:src="@mipmap/gold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="充值"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_14"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:paddingTop="@dimen/txt_5dp"
                    android:layout_weight="1.5"
                    android:src="@mipmap/goldbag"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="提现"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_14"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:paddingTop="@dimen/txt_5dp"
                    android:layout_weight="1.5"
                    android:src="@mipmap/cautionmoney"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="保证金"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_14"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/wallte_to_coupon"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:paddingTop="@dimen/txt_5dp"
                    android:src="@mipmap/coupon"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="优惠券"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_14"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="本月账单记录"
            android:background="@color/color_f2"
            android:textSize="@dimen/txt_12"
            android:textColor="#666666"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/txt_10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/txt_10dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:textSize="@dimen/txt_14"
                    android:text="今天"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="8:25"
                    android:gravity="center"
                    android:textColor="#666666"
                    android:textSize="@dimen/txt_14"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/txt_10dp"
                android:layout_centerInParent="true"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:textSize="@dimen/txt_14"
                    android:text="今天"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="8:25"
                    android:gravity="center"
                    android:textColor="#666666"
                    android:textSize="@dimen/txt_14"/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>