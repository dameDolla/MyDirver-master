<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/txt_39dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="深圳市东南西北物流有限公司"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_14"
            android:gravity="center_vertical"
            android:id="@+id/company_name"
            android:paddingLeft="@dimen/txt_10dp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ck_select_company"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/txt_15dp"/>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_f2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" 公司法人:"
            android:paddingLeft="@dimen/txt_10dp"
            android:paddingTop="@dimen/txt_5dp"
            android:textSize="@dimen/txt_14"
            android:textColor="#666666"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="王二毛"
            android:id="@+id/company_faren"
            android:paddingLeft="@dimen/txt_5dp"
            android:paddingTop="@dimen/txt_5dp"
            android:textSize="@dimen/txt_14"
            android:textColor="#666666"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" 联系人:"
            android:paddingLeft="@dimen/txt_10dp"
            android:paddingTop="@dimen/txt_5dp"
            android:textSize="@dimen/txt_14"
            android:textColor="#666666"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="李三毛"
            android:id="@+id/company_lxr"
            android:paddingLeft="@dimen/txt_5dp"
            android:paddingTop="@dimen/txt_5dp"
            android:textSize="@dimen/txt_14"
            android:textColor="#666666"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" 电话:"
            android:paddingLeft="@dimen/txt_10dp"
            android:paddingTop="@dimen/txt_5dp"
            android:textSize="@dimen/txt_14"
            android:textColor="#666666"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="13699990808"
            android:id="@+id/company_tel"
            android:paddingLeft="@dimen/txt_5dp"
            android:paddingTop="@dimen/txt_5dp"
            android:textSize="@dimen/txt_14"
            android:textColor="#666666"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" 地址:"
            android:paddingLeft="@dimen/txt_10dp"
            android:paddingTop="@dimen/txt_5dp"
            android:textSize="@dimen/txt_14"
            android:textColor="#666666"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="深圳市虚拟大学园R3-B 3c物通科技"
            android:id="@+id/company_addr"
            android:paddingTop="@dimen/txt_5dp"
            android:paddingLeft="@dimen/txt_5dp"
            android:paddingRight="@dimen/txt_39dp"
            android:paddingBottom="@dimen/txt_15dp"
            android:textSize="@dimen/txt_14"
            android:textColor="#666666"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_f2"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/txt_10dp"
        android:paddingBottom="@dimen/txt_10dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="该公司以通过审核"
            android:textColor="@color/titleColorSelected"
            android:textSize="@dimen/txt_14"
            android:id="@+id/is_shenhe"
            android:paddingLeft="@dimen/txt_10dp"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/txt_15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="id:"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_14"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="89757"
                android:id="@+id/company_id"
                android:textSize="@dimen/txt_14"
                android:textColor="@color/black"
                android:gravity="center_vertical"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>