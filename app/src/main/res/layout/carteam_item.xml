<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/txt_20dp"
        android:layout_marginLeft="@dimen/txt_15dp"
        android:paddingBottom="@dimen/txt_10dp"
        android:background="@drawable/baojia_edit_bg">
        <!--此处应该是GridView-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:roundAsCircle="true"
                        android:visibility="gone"
                        android:paddingLeft="@dimen/txt_10dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        app:placeholderImage="@drawable/emptycar"
                        android:id="@+id/carteam_item_icon"/>
                   <!-- <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:text="王斯"
                        android:id="@+id/carteam_item_name"
                        android:paddingTop="@dimen/txt_10dp"/>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/carteam_item_icon"
                    android:layout_marginTop="@dimen/txt_10dp"
                    android:paddingLeft="@dimen/txt_10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="赣A75684"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_18"
                        android:id="@+id/carteam_item_carnum"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/txt_15dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="车型"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_12"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_12"
                            android:text="冷藏车"
                            android:id="@+id/carteam_item_cartype"
                            android:paddingLeft="@dimen/txt_10dp"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_12"
                            android:text="22吨"
                            android:id="@+id/carteam_item_weight"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12.5米"
                            android:paddingLeft="@dimen/txt_10dp"
                            android:id="@+id/carteam_item_carlenth"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_12"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12.5米"
                            android:paddingLeft="@dimen/txt_10dp"
                            android:id="@+id/carteam_item_carkuan"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_12"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12.5米"
                            android:paddingLeft="@dimen/txt_10dp"
                            android:id="@+id/carteam_item_carheight"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_12"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_12"
                            android:text="30方"
                            android:id="@+id/carteam_item_tiji"
                            android:paddingLeft="@dimen/txt_10dp"/>
                    </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text=""
                            android:layout_alignParentRight="true"
                            android:textSize="@dimen/txt_14"
                            android:id="@+id/carteam_item_status"
                            android:paddingRight="@dimen/txt_15dp"/>
                    </RelativeLayout>

                </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/carteam_item_ll"
                    android:layout_centerVertical="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="删除"
                        android:id="@+id/carteam_item_del"
                        android:textColor="@color/red"
                        android:textSize="@dimen/txt_14"
                        android:background="@drawable/red_stroke"
                        android:paddingLeft="@dimen/txt_10dp"
                        android:paddingRight="@dimen/txt_10dp"
                        android:paddingTop="@dimen/txt_5dp"
                        android:paddingBottom="@dimen/txt_5dp"
                        android:layout_marginRight="@dimen/txt_15dp"
                        android:gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/carteam_item_bind_ll"
                    android:visibility="gone"
                    android:layout_centerVertical="true">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="调度"
                        android:id="@+id/carteam_item_bind"
                        android:textColor="@color/shen_blue"
                        android:textSize="@dimen/txt_14"
                        android:background="@drawable/blue_stroke"
                        android:paddingLeft="@dimen/txt_10dp"
                        android:paddingRight="@dimen/txt_10dp"
                        android:paddingTop="@dimen/txt_5dp"
                        android:paddingBottom="@dimen/txt_5dp"
                        android:layout_marginRight="@dimen/txt_15dp"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>