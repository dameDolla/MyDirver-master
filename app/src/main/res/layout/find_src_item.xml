<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/txt_15dp"
        android:background="@color/color_f2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/find_iv_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:roundAsCircle="true"
                android:paddingTop="@dimen/txt_10dp"
                android:layout_centerHorizontal="true"
                app:placeholderImage="@mipmap/head"/>

            <TextView
                android:id="@+id/find_tv_name"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/find_iv_icon"
                android:layout_marginTop="@dimen/txt_5dp"
                android:gravity="center"
                android:text="jack"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_14" />

            <TextView
                android:id="@+id/find_is_renzheng"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/find_tv_name"
                android:gravity="center"
                android:textColor="#ff9800"
                android:textSize="@dimen/txt_12" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/zhuang" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/xie" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/find_addr_zhuang"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:singleLine="true"
                        android:text="深圳市虚拟大学园"
                        android:textColor="#010000"
                        android:textSize="@dimen/txt_18" />

                    <TextView
                        android:id="@+id/find_addr_xie"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingBottom="3dp"
                        android:singleLine="true"
                        android:paddingTop="2dp"
                        android:text="俄罗斯贝加尔湖"
                        android:textColor="#010000"
                        android:textSize="@dimen/txt_18" />
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingBottom="2dp"
                        android:paddingTop="6dp"
                        android:src="@mipmap/product" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingBottom="5dp"
                        android:paddingTop="4dp"
                        android:src="@mipmap/calander" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:src="@mipmap/small_truck" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/find_type"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:text="家具"
                        android:textColor="@color/color_fd4a"
                        android:textSize="@dimen/txt_14" />

                    <TextView
                        android:id="@+id/find_time"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingBottom="3dp"
                        android:paddingTop="2dp"
                        android:text="2017-7-31  星期一  下午"
                        android:textColor="@color/color_fd4a"
                        android:textSize="@dimen/txt_14" />

                    <TextView
                        android:id="@+id/find_car_type"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingBottom="3dp"
                        android:paddingTop="2dp"
                        android:text="10.0吨  9.6米  高箱车"
                        android:textColor="@color/color_fd4a"
                        android:textSize="@dimen/txt_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/txt_10dp"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:id="@+id/find_iv_tel_ll"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已报价"
                        android:textColor="@color/white"
                        android:paddingRight="3dp"
                        android:paddingLeft="3dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:visibility="gone"
                        android:id="@+id/find_iv_bjstatus"
                        android:background="@drawable/red_bg"
                        android:layout_marginRight="@dimen/txt_5dp"/>
                    <ImageView
                        android:id="@+id/find_iv_phone"
                        android:layout_width="25dp"
                        android:visibility="gone"
                        android:layout_height="25dp"
                        android:src="@mipmap/phone" />
                    <!-- <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/txt_15dp"
                        android:text="联系货主"
                        android:textColor="#4a4a4a"
                        android:layout_marginTop="@dimen/txt_5dp"
                        android:textSize="@dimen/txt_12"/>-->
                </LinearLayout>

            </LinearLayout>
            </LinearLayout>
        </LinearLayout>

</LinearLayout>