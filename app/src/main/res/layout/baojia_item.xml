<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/txt_10dp"
        android:background="@drawable/baojia_edit_bg"
        android:layout_marginRight="@dimen/txt_10dp"
        android:layout_marginLeft="@dimen/txt_10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black_6d"
                android:textSize="@dimen/txt_14"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/baojia_items_shr"
                android:layout_marginLeft="@dimen/txt_5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black_6d"
                android:gravity="center_vertical"
                android:textSize="@dimen/txt_14"
                android:id="@+id/baojia_items_money"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/txt_5dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/txt_5dp"
            android:background="@color/color_f2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/txt_15dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/txt_15dp"
                        android:src="@drawable/bluecompass"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="9"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:id="@+id/baojia_items_addr"
                        android:text="深圳市虚拟大学园R3-B 3c冠洲科技"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_16"
                        android:paddingLeft="@dimen/txt_10dp"/>
                </LinearLayout>

                <!--********************始发地目的地*********************************-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/txt_5dp"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="9"
                        android:paddingLeft="@dimen/txt_10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="货物类型:"
                            android:textColor="@color/black_6d"
                            android:textSize="@dimen/txt_14"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:textColor="@color/black_6d"
                            android:textSize="@dimen/txt_14"
                            android:id="@+id/baojia_items_carinfo"
                            android:paddingLeft="@dimen/txt_10dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/txt_5dp"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="9"
                        android:paddingLeft="@dimen/txt_10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="装车时间:"
                            android:textColor="@color/black_6d"
                            android:textSize="@dimen/txt_14"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:id="@+id/baojia_items_time"
                            android:textColor="@color/black_6d"
                            android:textSize="@dimen/txt_14"
                            android:paddingLeft="@dimen/txt_10dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/baojia_items_phone"
                    android:layout_marginRight="@dimen/txt_10dp"
                    android:src="@mipmap/phone"/>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/txt_5dp"
            android:background="@color/color_f2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/green_bg"
                android:text="重新报价"
                android:layout_toLeftOf="@+id/baojia_items_ckhy"
                android:textColor="@color/white"
                android:id="@+id/baojia_items_cxbj"
                android:paddingLeft="@dimen/txt_5dp"
                android:paddingRight="@dimen/txt_5dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/txt_15dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/login_bt_"
                android:text="查看货源"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/txt_5dp"
                android:paddingRight="@dimen/txt_5dp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:id="@+id/baojia_items_ckhy"
                android:layout_marginRight="@dimen/txt_15dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/border_gray"
                android:text="取消报价"
                android:paddingLeft="@dimen/txt_5dp"
                android:paddingRight="@dimen/txt_5dp"
                android:layout_toLeftOf="@+id/baojia_items_cxbj"
                android:textColor="@color/black_6d"
                android:layout_centerVertical="true"
                android:id="@+id/baojia_items_cancel"
                android:layout_marginRight="@dimen/txt_15dp"
                android:gravity="center"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>