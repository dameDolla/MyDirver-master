<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/txt_10dp"
        android:background="@color/white"
        android:paddingTop="@dimen/txt_5dp"
        android:paddingBottom="@dimen/txt_5dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="@dimen/txt_15dp"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/txt_5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="#666666"
            android:id="@+id/lv_route_addr"
            android:text="深圳-俄罗斯贝加尔湖"
            android:textSize="@dimen/txt_14"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#666666"
            android:id="@+id/lv_route_carinfo"
            android:text="箱式\12.5m"
            android:textSize="@dimen/txt_14"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:paddingRight="@dimen/txt_15dp"
        android:layout_alignParentRight="true">
        <com.suke.widget.SwitchButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/is_main"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设为主要路线"
            android:textColor="#666666"
            android:textSize="@dimen/txt_12"/>
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>