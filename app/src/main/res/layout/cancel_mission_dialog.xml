<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="取消运单"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_18"
        android:paddingTop="@dimen/txt_15dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/txt_10dp"
        android:background="@color/color_f2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/txt_20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="运单状态:"
            android:textSize="@dimen/txt_16"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/txt_10dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:id="@+id/cancel_mission_dialog_status"
            android:textColor="@color/red"
            android:textSize="@dimen/txt_16"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/txt_15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingLeft="@dimen/txt_10dp"
            android:text="取消原因:"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_16" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:paddingTop="@dimen/txt_5dp"
            android:paddingBottom="@dimen/txt_5dp"
            android:paddingLeft="2dp"
            android:layout_marginLeft="@dimen/txt_5dp"
            android:id="@+id/cancel_mission_dialog_reason"
            android:background="@drawable/border_gray"
            android:layout_marginRight="@dimen/txt_15dp"
            android:textColor="@color/red"
            android:textSize="@dimen/txt_16" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注意"
        android:textSize="@dimen/txt_18"
        android:textColor="@color/black_6d"
        android:layout_marginTop="@dimen/txt_20dp"
        android:paddingLeft="@dimen/txt_10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/txt_10dp"
        android:layout_marginRight="@dimen/txt_15dp"
        android:paddingLeft="@dimen/txt_10dp"
        android:text="     您取消运单，将扣除保证金200元，并且增加您一次违约记录，请谨慎操作。"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/txt_20dp"
        android:background="@color/color_f2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/txt_20dp"
        android:layout_marginBottom="@dimen/txt_39dp"
        android:gravity="center">
        <Button
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="取消运单"
            android:id="@+id/cancel_mission_dialog_cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_18"
            android:background="@drawable/login_bt_"/>
    </LinearLayout>
</LinearLayout>