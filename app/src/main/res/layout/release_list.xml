<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:focusable="true"
    android:focusableInTouchMode="true" >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/shen_blue"
        android:text="空程"
        android:textSize="@dimen/txt_18"
        android:textColor="@color/white"
        android:gravity="center"/>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/txt_15dp"
        android:background="@color/color_f2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="9">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:id="@+id/rl_toaddrelease"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/truckgreen"
                android:paddingLeft="@dimen/txt_10dp"
                android:id="@+id/kong_truck"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/txt_10dp"
                android:layout_toRightOf="@+id/kong_truck">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="发布空程车"
                    android:textSize="@dimen/txt_18"
                    android:textColor="#3bbe79"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fabu_intro"
                    android:ellipsize="end"
                    android:maxEms="19"
                    android:paddingTop="@dimen/txt_5dp"
                    android:textColor="@color/color_4a"
                    android:textSize="@dimen/txt_12"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=">"
                android:gravity="center_vertical"
                android:textSize="@dimen/txt_20"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/txt_15dp"/>

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/txt_15dp"
            android:background="@color/color_f2"/>
        <com.app.gaolonglong.fragmenttabhost.view.EmptyLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/back_empty_view"
            android:visibility="gone"/>
        <!--此处应是一个ListView-->
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rcv_have_fabu"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:background="@color/color_f2"
            android:layout_gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="38"
                android:background="@color/color_f2"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="24"
                android:layout_marginLeft="@dimen/txt_10dp"
                android:text="历史空程发布"
                android:textColor="#666666"
                android:textSize="@dimen/txt_14"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="38"
                android:background="@color/color_f2"/>
        </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rcv_have_cancle"/>


    </LinearLayout>

    </LinearLayout>


</LinearLayout>
</ScrollView>