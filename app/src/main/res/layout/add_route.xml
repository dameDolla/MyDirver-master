<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/top_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/add_route_ll"
        android:background="@color/color_f2"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:background="@drawable/border_gray"
            android:layout_marginLeft="@dimen/txt_10dp"
            android:layout_marginRight="@dimen/txt_10dp"
            android:layout_marginTop="30dp"
            android:id="@+id/addr_route_rl_start">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="始发地"
                android:textSize="@dimen/txt_14"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/txt_10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/txt_10dp"
                android:text=">"
                android:gravity="center_vertical"
                android:textSize="@dimen/txt_20"
                android:id="@+id/route_arrow_down"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="北京朝阳区"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_14"
                android:id="@+id/add_route_start"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@+id/route_arrow_down"
                android:paddingRight="@dimen/txt_5dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:background="@drawable/border_gray"
            android:layout_marginLeft="@dimen/txt_10dp"
            android:layout_marginRight="@dimen/txt_10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/add_route_rl_finish">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="目的地"
                android:textSize="@dimen/txt_14"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/txt_10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/txt_10dp"
                android:text=">"
                android:gravity="center_vertical"
                android:textSize="@dimen/txt_20"
                android:id="@+id/route_arrow_down2"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="请选择"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_14"
                android:id="@+id/add_route_finish"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@+id/route_arrow_down2"
                android:paddingRight="@dimen/txt_5dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:background="@drawable/border_gray"
            android:layout_marginLeft="@dimen/txt_10dp"
            android:layout_marginRight="@dimen/txt_10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/add_route_rl_type">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="车型"
                android:textSize="@dimen/txt_14"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/txt_10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/txt_10dp"
                android:text=">"
                android:gravity="center_vertical"
                android:textSize="@dimen/txt_20"
                android:id="@+id/route_arrow_down3"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="请选择"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_14"
                android:id="@+id/add_route_type"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@+id/route_arrow_down3"
                android:paddingRight="@dimen/txt_5dp"/>
        </RelativeLayout>
        
        <Button
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="@drawable/login_bt_"
            android:text="添加路线"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_18"
            android:id="@+id/bt_add_route"
            android:layout_marginTop="45dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"/>

    </LinearLayout>

</LinearLayout>