<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f2">

    <include layout="@layout/top_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:background="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请为手机号码为 159****0321"
            android:textColor="#666666"
            android:textSize="@dimen/txt_14"
            android:gravity="center"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置新的密码"
            android:textColor="#666666"
            android:textSize="@dimen/txt_14"
            android:gravity="center"
            android:paddingBottom="@dimen/txt_15dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:paddingTop="@dimen/txt_20dp"
        android:orientation="horizontal"
        android:gravity="center">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="请输入支付密码,支付密码不能重复连续的数字"
        android:textColor="#666666"
        android:textSize="@dimen/txt_14" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/txt_39dp"
        android:background="@drawable/login_bt_"
        android:text="确认提交"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_18"
        android:gravity="center"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"/>
</LinearLayout>