                    </LinearLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_f2"
                        android:layout_marginTop="@dimen/txt_5dp"
                        android:layout_marginBottom="@dimen/txt_5dp"/>
     <!--**********************************第三部***********************************-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="到达目的地,正在卸货"
                        android:id="@+id/mission_status_four"
                        android:textColor="@color/gray_87"
                        android:textSize="@dimen/txt_14"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="等待货主验收货物，支付相应费用"
                            android:textSize="@dimen/txt_12"
                            android:textColor="@color/gray_87"
                            android:id="@+id/mission_statusfour_txt"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_f2"
                        android:layout_marginTop="@dimen/txt_5dp"
                        android:layout_marginBottom="@dimen/txt_5dp"/>
    <!--*********************************第四部**************************************-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="运单完成"
                        android:id="@+id/mission_status_five"
                        android:textColor="@color/gray_87"
                        android:textSize="@dimen/txt_14"/>
